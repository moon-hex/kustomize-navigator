{
  "name": "kustomize-navigator",
  "displayName": "Kustomize Navigator",
  "description": "Navigate between Kustomize YAML files with ctrl+click",
  "version": "0.3.0",
  "engines": {
    "vscode": ">=1.0.0"
  },
  "publisher": "MichalHajny",
  "activationEvents": [
    "workspaceContains:**/kustomization.yaml",
    "workspaceContains:**/kustomization.yml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kustomize-navigator.parse",
        "title": "Parse Kustomization Folder"
      }
    ]
  },
  "configuration": {
    "title": "Kustomize Navigator",
    "properties": {
      "kustomizeNavigator.highlightFluxVariables": {
        "type": "boolean",
        "default": true,
        "description": "Highlight Flux variable substitutions in YAML files"
      },
      "kustomizeNavigator.fluxVariableColor": {
        "type": "string",
        "default": "#3498db",
        "format": "color",
        "description": "Color to use for highlighting Flux variables"
      },
      "kustomizeNavigator.standardFluxVariables": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "cluster_env",
          "cluster_region",
          "cluster_name",
          "namespace",
          "app_name",
          "git_branch",
          "git_sha",
          "deployment_name"
        ],
        "description": "List of standard Flux variables to suggest in autocompletion"
      },
      "kustomizeNavigator.diagnostics.enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable diagnostic warnings for Kustomize and Flux configuration issues"
      },
      "kustomizeNavigator.diagnostics.securityChecks": {
        "type": "boolean",
        "default": true,
        "description": "Enable checks for Kubernetes security best practices"
      },
      "kustomizeNavigator.diagnostics.namingConventionChecks": {
        "type": "boolean",
        "default": true,
        "description": "Check resource names against Kubernetes naming best practices"
      },
      "kustomizeNavigator.hovers.showBackReferences": {
        "type": "boolean",
        "default": true,
        "description": "Show back references (files that reference the current file) in hovers"
      },
      "kustomizeNavigator.hovers.showResourcePreview": {
        "type": "boolean",
        "default": true,
        "description": "Show a preview of resources in target kustomization files when hovering references"
      }
    }
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kubernetes",
    "kustomize",
    "kustomization",
    "gitops",
    "yaml",
    "flux"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mh185196_ncrvoyix/kustomize-navigator"
  },
  "icon": "images/vscode-extension-icon.png",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "*",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}