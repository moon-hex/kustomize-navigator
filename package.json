{
  "name": "kustomize-navigator",
  "displayName": "Kustomize Navigator",
  "description": "Navigate and manage Kustomize references in your Kubernetes manifests",
  "version": "0.8.4",
  "icon": "images/vscode-extension-icon.png",
  "engines": {
    "vscode": ">=1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/kustomization.yaml",
    "workspaceContains:**/kustomization.yml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "kustomizeReferences",
          "name": "Kustomize Back References"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kustomizeReferences",
        "contents": "No active file.\n[Open a YAML File](command:workbench.action.files.openFile)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "kustomizeNavigator.openFile",
          "when": "view == kustomizeReferences && viewItem =~ /kustomization|resource/"
        }
      ],
      "view/title": [
        {
          "command": "kustomizeNavigator.refreshReferences",
          "when": "view == kustomizeReferences",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "kustomizeNavigator.openFile",
        "title": "Open File"
      },
      {
        "command": "kustomizeNavigator.refreshReferences",
        "title": "Refresh References",
        "icon": "$(refresh)"
      }
    ],
    "configuration": {
      "title": "Kustomize Navigator",
      "properties": {
        "kustomizeNavigator.highlightFluxVariables": {
          "type": "boolean",
          "default": true,
          "description": "Enable highlighting of Flux variable substitutions"
        },
        "kustomizeNavigator.fluxVariableColor": {
          "type": "string",
          "default": "#3498db",
          "description": "Color to use for highlighting Flux variables"
        },
        "kustomizeNavigator.kustomizeApiColor": {
          "type": "string",
          "default": "#27ae60",
          "description": "Color to use for Kustomize API version labels"
        },
        "kustomizeNavigator.fluxApiColor": {
          "type": "string",
          "default": "#e74c3c",
          "description": "Color to use for Flux API version labels"
        },
        "kustomizeNavigator.standardFluxVariables": {
          "type": "array",
          "default": [
            "cluster_env",
            "cluster_region",
            "cluster_name",
            "namespace",
            "app_name"
          ],
          "description": "Standard Flux variables to suggest in autocompletion"
        },
        "kustomizeNavigator.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable all diagnostic checks"
        },
        "kustomizeNavigator.diagnostics.checks.resourceNaming": {
          "type": "boolean",
          "default": true,
          "description": "Check resource names against Kubernetes naming conventions"
        },
        "kustomizeNavigator.diagnostics.checks.namespaceRequired": {
          "type": "boolean",
          "default": true,
          "description": "Check if namespaced resources have a namespace specified"
        },
        "kustomizeNavigator.diagnostics.checks.recursiveDependencies": {
          "type": "boolean",
          "default": true,
          "description": "Check for recursive dependencies in Flux kustomizations"
        },
        "kustomizeNavigator.diagnostics.checks.imageTags": {
          "type": "boolean",
          "default": true,
          "description": "Check for hardcoded image tags or missing tags"
        },
        "kustomizeNavigator.diagnostics.checks.securityIssues": {
          "type": "boolean",
          "default": true,
          "description": "Check for common security issues like privileged containers"
        },
        "kustomizeNavigator.diagnostics.checks.fluxVersions": {
          "type": "boolean",
          "default": true,
          "description": "Check for deprecated Flux API versions"
        },
        "kustomizeNavigator.diagnostics.checks.gitopsComponents": {
          "type": "boolean",
          "default": true,
          "description": "Check if essential GitOps components are present"
        },
        "kustomizeNavigator.diagnostics.checks.performanceIssues": {
          "type": "boolean",
          "default": true,
          "description": "Check for configurations that might cause performance issues"
        },
        "kustomizeNavigator.diagnostics.checks.variableSubstitution": {
          "type": "boolean",
          "default": true,
          "description": "Check for Flux variable substitution issues"
        },
        "kustomizeNavigator.diagnostics.checks.indentation": {
          "type": "boolean",
          "default": true,
          "description": "Check for consistent YAML indentation"
        },
        "kustomizeNavigator.diagnostics.checks.deprecatedPatches": {
          "type": "boolean",
          "default": true,
          "description": "Warn about deprecated patch fields (patchesStrategicMerge, patchesJson6902)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/glob": "^10.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.11.16",
    "@types/vscode": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mh185196_ncrvoyix/kustomize-navigator.git"
  },
  "keywords": [
    "kubernetes",
    "kustomize",
    "flux",
    "gitops",
    "devops",
    "k8s"
  ],
  "publisher": "MichalHajny",
  "license": "MIT"
}